{
  "settings" : {
    "analysis" : {
      "analyzer" : {
        "left" : {
          "filter" : [
            "standard",
            "lowercase",
            "stop"
          ],
          "type" : "custom",
          "tokenizer" : "customEdgeNGram"
        },
        "right" : {
          "filter" : [
            "standard",
            "lowercase",
            "stop",
            "reverse"
          ],
          "type" : "custom",
          "tokenizer" : "customEdgeNGram"
        }
      },
      "tokenizer" : {
        "customEdgeNGram" : {
          "max_gram" : 20,
          "type" : "edgeNGram"
        }
      }
    }
  },
  "mappings": {
    "question": {
      "_timestamp": {
        "enabled": true
      },
      "properties": {
        "title": {
          "fields":{
            "title": {"type": "string", "analyzer": "left"},
            "reverse_title": {"type": "string", "analyzer": "right"}
          },
          "type" : "multi_field"
        },
        "author": {
          "type": "string",
          "index": "not_analyzed"
        },
        "answer_id": {
          "type": "string",
          "index": "not_analyzed"
        },
        "tags": {
          "properties": {
            "name": {
              "type": "string",
              "index": "not_analyzed"
            }
          }
        }
      }
    }
  }
}
